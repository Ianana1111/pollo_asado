<launch>

    <arg name="rviz" default="true"/>

    <include file="$(find asado_description)/launch/spawn.launch"/>

    <!---Run AMCL -->
    <include file="$(find asado_navigation)/launch/amcl.launch" />

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find asado_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find asado_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find asado_navigation)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find asado_navigation)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find asado_navigation)/config/base_local_planner_params.yaml" command="load" />
        <rosparam file="$(find asado_navigation)/config/move_base_params.yaml" command="load" />
        <remap from="/cmd_vel" to="asado/cmd_vel"/>
    </node>

    <!-- Rviz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find asado_navigation)/rviz/move_base.rviz" 
    if="$(arg rviz)"/>

</launch> 