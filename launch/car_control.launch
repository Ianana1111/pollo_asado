<launch>

  <include file="$(find car_simulation)/launch/car_world.launch"/>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find car_simulation)/config/car_control.yaml" command="load"/>

  <!-- Load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="/car" args="joint_state_controller
					  LF_wheel_velocity_controller  
					  LB_wheel_velocity_controller
            RF_wheel_velocity_controller
            RB_wheel_velocity_controller"/>

  <!-- Convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	respawn="false" output="screen">    
    <remap from="/joint_states" to="/car/joint_states" />
  </node>

  <!-- Rviz -->
  <node
    name="rviz"
    pkg="rviz"
    type="rviz"
    args="-d $(find car_simulation)/urdf.rviz" />
  
</launch>